<div class="p-8 gap-y-8 flex flex-col">
  <div id="user_info" class="flex flex-wrap justify-center bg-white w-1/3 mx-auto rounded-xl p-6">
    <%= image_tag("default.jpg", :class => "shadow-xl rounded-full h-auto max-w-40") %>
    <div id="user_stats" class="w-full px-4 text-center">
      <div class="flex justify-center flex-col p-3 text-center">
        <span class="text-xl font-semibold capitalize tracking-wide block mt-2"><%= @user.full_name %></span>
        <span class="font-semibold text-gray-500 lowercase tracking-wide block mb-4">@<%= @user.username %></span>
        <span class="text-xl font-bold block uppercase tracking-wide text-blue-500"><%= @user.buffet.events.count %></span>
        <span class="text-sm">Eventos</span>
        <span class="text-sm mt-8">Membro desde: <%= I18n.l(@user.created_at, format: :long) %></span>
      </div>
    </div>
  </div>

  <% if @user.buffet %>
    <div id="user_buffet" class="flex flex-col justify-center bg-white w-1/3 mx-auto rounded-xl p-6">
      <div class="text-sm leading-normal font-bold uppercase">
        Informações do buffet
      </div>
      <div class="flex flex-col mx-auto mt-4 gap-y-4">
        <div class="flex flex-row">
          <label for="buffet_name" class="font-semibold mr-2 content-center">Nome:</label>
          <input disabled id="buffet_name" type="text" placeholder="Nome" class="rounded-xl w-72 disabled:bg-gray-200" value="<%= @user.buffet.trading_name %>">
        </div>
        <div class="flex flex-row">
          <label for="buffet_contact_number" class="font-semibold mr-2 content-center">Número para contato:</label>
          <input disabled id="buffet_contact_number" type="text" placeholder="Número" class="rounded-xl w-72 disabled:bg-gray-200" value="<%= @user.buffet.contact_number %>">
        </div>
        <div class="flex flex-row">
          <label for="buffet_email" class="font-semibold mr-2 content-center">E-mail:</label>
          <input disabled id="buffet_email" type="text" placeholder="E-mail" class="rounded-xl w-72 disabled:bg-gray-200" value="<%= @user.buffet.email %>">
        </div>
      </div>
        <%= link_to('Ver buffet', root_path, :class => "bg-blue-500 rounded-full px-3 py-2 text-sm font-semibold text-white mr-2 my-2 w-24 mx-auto") %>
    </div>
  <% end %>
</div>