<div class="flex flex-row justify-between mt-8">
  <div class="mx-auto">
  <%= render('user-about', user: @user) %>
  </div>
  <% if @user.buffet.present? %>
    <div class="flex flex-col w-1/2 items-center gap-y-8">
      <%= render('shared/buffet/info', buffet: @user.buffet)%>
      <%= link_to('Ver buffet', buffet_path(@user.buffet), :class => "bg-blue-400 rounded-full px-3 py-2 text-sm font-semibold text-white w-auto hover:underline flex mx-auto") %>
    </div>
  <% end %>
</div>