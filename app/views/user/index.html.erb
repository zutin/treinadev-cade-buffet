<div class="p-8 gap-y-8 flex flex-col">
  <div id="user_info" class="flex flex-wrap justify-center bg-white w-1/3 mx-auto rounded-xl p-6">
    <%= image_tag("default-user.jpg", :class => "shadow-xl rounded-full h-auto max-w-40") %>
    <div id="user_stats" class="w-full px-4 text-center">
      <div class="flex justify-center flex-col p-3 text-center">
        <span class="text-xl font-semibold capitalize tracking-wide block mt-2"><%= current_user.full_name %></span>
        <span class="font-semibold text-gray-500 lowercase tracking-wide block mb-4">@<%= current_user.username %></span>
        <span class="text-xl font-bold block uppercase tracking-wide text-blue-400"><%= current_user.buffet.present? ? current_user.buffet.events.count : '0' %></span>
        <span class="text-sm">Eventos</span>
        <span class="text-sm mt-8">Membro desde: <%= I18n.l(current_user.created_at, format: :long) %></span>
      </div>
    </div>
  </div>

  <div id="user_about" class="flex flex-col justify-center bg-white w-1/3 mx-auto rounded-xl p-6">
    <div class="text-sm leading-normal font-bold uppercase">
      Informações da conta
    </div>
    <div class="flex flex-col mx-auto mt-4 gap-y-4">
      <div class="flex flex-row">
        <label for="user_email" class="font-semibold mr-2 content-center">E-mail:</label>
        <input disabled id="user_email" type="text" placeholder="E-mail" class="rounded-xl w-72 disabled:bg-gray-200" value="<%= current_user.email %>">
      </div>
      <div class="flex flex-row">
        <label for="user_contact_number" class="font-semibold mr-2 content-center whitespace-nowrap">Número para contato:</label>
        <input disabled id="user_contact_number" type="text" placeholder="Contato" class="rounded-xl w-72 disabled:bg-gray-200" value="<%= current_user.contact_number %>">
      </div>
    </div>
  </div>
</div>
