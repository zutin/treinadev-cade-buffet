<div class="flex flex-wrap justify-center bg-white w-1/2 rounded-xl p-6">
  <% if buffet.buffet_logo.attached? %>
    <%= image_tag(buffet.buffet_logo) %>
  <% else %>
    <%= image_tag("default-buffet.jpg") %>
  <% end %>
  <div id="buffet_about" class="w-full px-4 text-center">
    <div class="flex justify-center flex-col p-3 text-center">
      <span class="text-xl font-semibold capitalize tracking-wide block mt-2"><%= buffet.trading_name %></span>
      <span class="text-sm font-semibold text-gray-500"><%= buffet.description %></span>
      <% if buffet.events.present? %>
        <span class="text-xl font-bold block uppercase tracking-wide text-blue-400 mt-4"><%= buffet.events.present? ? buffet.events.count : '0' %></span>
        <span class="text-sm">Eventos disponíveis</span>
      <% else %>
        <span class="text-base text-blue-400 block font-semibold tracking-wide mt-4">O buffet não possui eventos</span>
      <% end %>
    </div>
  </div>
</div>