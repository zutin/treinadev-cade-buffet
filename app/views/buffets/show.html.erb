<div class="flex flex-row justify-between gap-8 mt-8">
  <%= render 'buffet_about', buffet: @buffet %>
  <%= render 'shared/buffet/info', buffet: @buffet %>
</div>

<% if @buffet.events.present? %>
  <% @buffet.events.each do |event| %>
    <%= render 'shared/event/info', event: event %>
    <% if user_signed_in? && current_user.customer? %>
      <%= link_to 'Contratar evento', new_event_order_path(event) %>
    <% end %>
  <% end %>
<% else %>
  <p>Esse buffet n√£o tem eventos registrados.</p>
<% end %>