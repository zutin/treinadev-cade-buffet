<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "shared/registration/error_messages", resource: resource %>
  <div class="flex flex-row mt-8 p-4 justify-center">
    <div class="bg-white rounded-l-xl w-1/3 p-8 flex flex-col shadow-xl">
      <h1 class="text-sm leading-normal font-bold uppercase mb-2">Sign up</h1>
      <div class="flex flex-col mx-auto w-1/2 my-auto">
        <div class="gap-x-2 flex mx-auto">
          <div>
            <%= f.radio_button :role, "customer" %>
            <%= f.label :role_customer, "Sou cliente", :class => "text-xs font-semibold" %>
          </div>
          <div>
            <%= f.radio_button :role, "owner" %>
            <%= f.label :role_owner, "Sou dono de buffet", :class => "text-xs font-semibold" %>
          </div>
        </div>
        <div class="my-4">
          <%= f.label :profile_picture %>
          <%= f.file_field :profile_picture %>
        </div>
        <%= render 'shared/form/text_field', form: f, required: true, attribute: :username, placeholder: 'UsuÃ¡rio' %>
        <%= render 'shared/form/text_field', form: f, required: true, attribute: :full_name, placeholder: 'Nome completo' %>
        <%= render 'shared/form/text_field', form: f, required: true, attribute: :social_security_number, placeholder: 'CPF' %>
        <%= render 'shared/form/text_field', form: f, required: true, attribute: :contact_number, placeholder: 'Telefone para contato' %>
        <%= render 'shared/form/text_field', form: f, required: true, attribute: :email, placeholder: 'E-mail' %>
        <%= render 'shared/form/password_field', form: f, required: false, attribute: :password, placeholder: 'Senha' %>
        <% if @minimum_password_length %>
          <em class="text-xs mt-0">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= render 'shared/form/password_field', form: f, required: false, attribute: :password_confirmation, placeholder: 'Confirme sua senha' %>
        <%= render 'shared/form/submit', form: f, button_text: 'Cadastrar' %>
        <div class="mt-4">
          <%= render "shared/registration/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>