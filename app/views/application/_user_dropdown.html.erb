<div class="relative inline-block text-left dropdown" id="user_dropdown">
  <span class="rounded-md shadow-sm">
    <button class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium leading-5 text-white transition duration-150 ease-in-out
    bg-blue-400 rounded-md hover:underline active:bg-blue-500 active:underline" type="button">
      <span>Conta</span>
      <svg class="w-5 h-5 ml-2 -mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h14"/>
      </svg>
    </button>
  </span>

  <div class="opacity-0 invisible dropdown-menu transition-all duration-300 transform origin-top-right -translate-y-2 scale-95">
    <div class="absolute right-0 w-56 mt-2 origin-top-right bg-white border border-gray-200 divide-y divide-gray-100 rounded-md shadow-lg outline-none">

      <div class="px-4 py-3">         
        <p class="text-sm leading-5">
          <% if user_signed_in? %>
            <%= current_user.full_name %>
          <% else %>
            Convidado
          <% end %>
        </p>
        <p class="text-sm font-medium leading-5 text-gray-900 truncate">
          <% if user_signed_in? %>
            <%= current_user.email %>
          <% else %>
            Fa√ßa login para continuar
          <% end %>
        </p>
      </div>

      <div class="py-1">
      <% if user_signed_in? %>
        <%= link_to 'Perfil', user_index_path, :class => "text-gray-700 flex justify-between w-full px-4 py-2 text-sm leading-5 text-left hover:underline hover:bg-gray-100 transition" %>
        <%= link_to 'Meu Buffet', user_buffets_path(current_user), :class => "text-gray-700 flex justify-between w-full px-4 py-2 text-sm leading-5 text-left hover:underline hover:bg-gray-100 transition" %>
        <%# <span role="menuitem" tabindex="-1" class="flex justify-between w-full px-4 py-2 text-sm leading-5 text-left text-gray-700 cursor-not-allowed opacity-50" aria-disabled="true">New feature (soon)</span> %>
      </div>
      <div class="py-1">
        <%= button_to 'Sair', destroy_user_session_path, :class => "text-gray-700 flex justify-between w-full px-4 py-2 text-sm leading-5 text-left hover:underline hover:bg-gray-100 transition", method: :delete %>
        <% else %>
        <%= link_to 'Login', new_user_session_path, :class => "text-gray-700 flex justify-between w-full px-4 py-2 text-sm leading-5 text-left hover:underline hover:bg-gray-100 transition" %>
        <% end %>
      </div>

    </div>
  </div>
</div>