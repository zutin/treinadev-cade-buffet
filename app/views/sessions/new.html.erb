<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-row mt-8 p-4 justify-center">
    <div class="bg-white rounded-l-xl w-1/3 p-8 flex flex-col shadow-xl">
      <h1 class="text-sm leading-normal font-bold uppercase mb-2">Log in</h1>
      <div class="flex flex-col mx-auto w-1/2 my-auto">
        <%= render 'shared/form/email_field', form: f, required: false, attribute: :email, placeholder: 'E-mail' %>
        <%= render 'shared/form/password_field', form: f, required: false, attribute: :password, placeholder: 'Senha' %>
        <% if devise_mapping.rememberable? %>
          <%= render 'shared/form/check_box', form: f, attribute: :remember_me %>
        <% end %>
        <%= render 'shared/form/submit', form: f, button_text: 'Entrar' %>
        <div class="mt-4">
          <%= render "shared/registration/links" %>
        </div>
      </div>
    </div>
    <%= image_tag("buffet-home.jpg", :class => "w-1/5 h-[600px] rounded-r-xl shadow-xl") %>
  </div>
<% end %>
