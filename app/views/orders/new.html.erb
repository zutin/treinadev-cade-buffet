<%= form_with(model: @order, url: event_orders_path(@event)) do |f| %>
  <div class="bg-white rounded-xl p-4 w-1/3 mx-auto mt-8">
    <h1 class="text-sm leading-normal font-bold uppercase mb-2">Novo pedido para <%= @event.name %></h1>
    <div class="p-3">
      <%= render 'shared/form/date_field', form: f, required: true, attribute: :desired_date %>
      <%= render 'shared/form/number_field', form: f, required: true, attribute: :estimated_invitees, placeholder: 'Estimativa de convidados' %>
      <% if @event.can_change_location %>
      <p class="text-sm leading-normal font-bold">Esse evento permite alteração de endereço.</p>
      <%= render 'shared/form/text_field', form: f, required: true, attribute: :desired_address, placeholder: 'Endereço do evento' %>
      <% else %>
      <p class="text-sm leading-normal font-bold">O endereço será o mesmo do buffet contratado.</p>
      <% end %>
      <%= render 'shared/form/submit', form: f, button_text: 'Salvar' %>
    </div>
  </div>
<% end %>